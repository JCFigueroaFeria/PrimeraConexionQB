<Window x:Class="ProyectosQB.VentanaInvoice"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="VentanaInvoice" Height="300" Width="500">
    <Grid>

        <DataGrid AutoGenerateColumns="False" Name="dgInvoice">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Invoice #" Width="80" Binding="{Binding Path=NumInvoice}" FontFamily="Arial" FontSize="14" />
                <DataGridTextColumn Header="Memo" Width="80" FontFamily="Arial" FontSize="14" Binding="{Binding Path=Memo}"  />
                <DataGridTextColumn Header="Taz" Width="80" FontFamily="Arial" FontSize="14" Binding="{Binding Path=Tax}"  />
            </DataGrid.Columns>
        </DataGrid>
        <DatePicker Name="dpFechaInicio" VerticalAlignment="Bottom" HorizontalAlignment="Left"></DatePicker>
        <DatePicker Name="dpFechaTermino" VerticalAlignment="Bottom" HorizontalAlignment="Right"></DatePicker>
        <Button Name="btnCargar"  VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="228,0,212,0" Width="52">Cargar</Button>
    </Grid>
</Window>
